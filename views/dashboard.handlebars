<div class="mb-5 pt-3">
    <a href="/dashboard/post"><button id="create-post" class="button is-primary is-pulled-right">create
            post</button></a>

    <h2 class="title pb-4 ">Dashboard: All posts</h2><hr>
    <hr>
    {{#if posts.length}}
</div>

{{#each posts as |post|}}
{{> post-info post}}

<a href="/dashboard/edit/{{post.id}}"><button class="button mb-5 ml-5 is-warning">edit post</button></a>
</div>
{{/each}}

{{else}}
<h6 class="pb-4 has-text-centered is-italic">you don't have posts</h6>

{{/if}}


<script src="/js/addPost.js"></script>