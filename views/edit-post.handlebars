<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body edit-post">
        <label for="post-subject" class="form-label">Title</label>
        <input name="post-subject" type="text" value="{{post.title}}" class="form-input" />
        <label class="form-label" for="content">Content</label>
        <input name="content" type="text" value="{{post.content}}" class="form-input" />
        <button type="submit" class="btn">Update Post</button>
        <button type="button" class="delete-post btn">Delete Post</button>
    </form>
</div>


<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>